<div class="new-form">
    {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
    <div class="form-group">
        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'required'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-user'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'required'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-user'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.main_phone, 'Phone number') }}
        {{ form_widget(form.main_phone, {'attr': {'class': 'form-control form-control-user'}}) }}
    </div>
    {{ form_row(form._token) }}

    <div class="create-buttons">
        <button class="btn btn-success btn-user" type="submit">save</button>
        <a class="btn btn-secondary btn-user" href="{{ path('app_contact_index') }}">back to list</a>
    </div>
</div>
